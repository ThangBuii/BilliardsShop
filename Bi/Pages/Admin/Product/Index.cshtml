@page
@model Client.Pages.Admin.Product.IndexModel
@{
}

<body class="bg-light">
    <div class="container mt-4">
        <h1 class="mb-4">Product</h1>
        <div class="card p-4 shadow-sm">
            <!-- Search -->
            <div class="pb-3">
                <form class="d-flex" action="" method="get">
                    <input class="form-control me-1" type="search" name="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-secondary" type="submit">Search</button>
                </form>
            </div>

            <!-- Add -->
            <div class="pb-3">
                <a href="/Admin/Product/Create"  class="btn btn-primary">Add</a>
            </div>

            <!-- Table -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-md-1">Id</th>
                        <th class="col-md-2">CategoryId</th>
                        <th class="col-md-2">UnitsInStock</th>
                        <th class="col-md-2">Available</th>
                        <th class="col-md-1">BrandId</th>
                        <th class="col-md-1">Brand</th>
                        <th class="col-md-1">Category</th>
                        <th class="col-md-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var listCategories in Model.Products)
                        {
                        <tr>
                            <td>@listCategories.Id</td>
                            <td>@listCategories.CategoryId</td>
                            <td>@listCategories.UnitsInStock</td>
                            <td>@listCategories.IsAvailable</td>
                            <td>@listCategories.BrandId</td>
                            <td>@listCategories.Brand</td>
                            <td>@listCategories.Category</td>
                            <td>
                                <a href='/Admin/Category/Update/@listCategories.Id' class="btn btn-warning btn-sm btn-edit-category">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-Id="@listCategories.Id">Delete</a>
                            </td>
                        </tr>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</body>
