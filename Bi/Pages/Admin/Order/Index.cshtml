@page
@model Client.Pages.Admin.Order.IndexModel
@{
}

<body class="bg-light">
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="container">
            <div class="card p-4 shadow-sm">
                <h1 class="mb-4">Order</h1>

                <!-- Search -->
                <div class="mb-3">
                    <form class="d-flex" method="get">
                        <input class="form-control me-1" type="search" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by Id or address" aria-label="Search">
                        <button class="btn btn-secondary" type="submit">Search</button>
                    </form>
                </div>

                <!-- Add -->
                <div class="mb-3">
                    <a href="/Admin/Order/Create" class="btn btn-primary">Add</a>
                </div>

                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="col-md-1">Id</th>
                                <th class="col-md-1">Date</th>
                                <th class="col-md-1">Total</th>
                                <th class="col-md-2">Shipping Address</th>
                                <th class="col-md-1">Status</th>
                                <th class="col-md-1">UserId</th>
                                <th class="col-md-1">Feature</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var listOrders in Model.Orders)
                                {
                                <tr>
                                    <td>@listOrders.Id</td>
                                    <td>@listOrders.Date</td>
                                    <td>@listOrders.Total</td>
                                    <td>@listOrders.ShippingAddress</td>
                                    <td>@listOrders.Status</td>
                                    <td>@listOrders.UserId</td>
                                    <td>
                                        <a href='/Admin/Orders/Update/@listOrders.Id' class="btn btn-warning btn-sm btn-edit-order">Edit</a>
                                        <a class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-Id="@listOrders.Id">Delete</a>
                                    </td>
                                </tr>
                                }
                            </tr>
                            <!-- Add more rows as needed -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
