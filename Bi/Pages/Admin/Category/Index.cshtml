@page
@model Client.Pages.Admin.Category.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<body class="bg-light">
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="container">
            <div class="card p-4 shadow">
                <h1 class="mb-4">Category</h1>

                <!-- Search -->
                <div class="pb-3">
                    <form class="d-flex" method="get">
                        <input class="form-control me-1" type="search" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by name" aria-label="Search">
                        <button class="btn btn-secondary" type="submit">Search</button>
                    </form>
                </div>

                <!-- Add -->
                <div class="pb-3"> 
                    <a href="/Admin/Category/Create" class="btn btn-primary">Add</a>
                </div>

                <!-- Table -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-1">Id</th>
                            <th class="col-md-1">Name</th>
                            <th class="col-md-1">Feature</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                             @foreach(var listCategories in Model.Categories)
                                {
                                <tr>    
                                    <td>@listCategories.Id</td>
                                    <td>@listCategories.Name</td>
                                <td>
                                    <a href='/Admin/Category/Update/@listCategories.Id' class="btn btn-warning btn-sm btn-edit-category">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-Id="@listCategories.Id">Delete</a>
                                </td>
                            </tr>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    
</body>
