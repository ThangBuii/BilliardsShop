@page
@model Client.Pages.Admin.User.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<body class="bg-light">
    <div class="container mt-4">
        <h1 class="mb-4">User</h1>
        <div class="my-3 p-3 bg-body rounded shadow-sm">
            <!-- Search -->
            <div class="pb-3">
                <form class="d-flex" method="get">
                    <input class="form-control me-1" type="search" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by username" aria-label="Search">
                    <button class="btn btn-secondary" type="submit">Search</button>
                </form>
            </div>

            <!-- Add -->
            <div class="pb-3">
                <a href="/Admin/User/Create" class="btn btn-primary btn-add-user">Add</a>
            </div>

            <!-- Table -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-md-1">Id</th>
                        <th class="col-md-2">Name</th>
                        <th class="col-md-2">Account</th>
                        <th class="col-md-2">Password</th>
                        <th class="col-md-2">Feature</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach(var listUsers in Model.Users)
                                {
                                <tr>    
                                    <td>@listUsers.Id</td>
                                    <td>@listUsers.Name</td>
                                <td>
                                    <a href='/Admin/User/Update/@listUsers.Id' class="btn btn-warning btn-sm btn-edit-user">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-Id="@listUsers.Id">Delete</a>
                                </td>
                                </tr>
                                }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
  
</body>
